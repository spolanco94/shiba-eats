<% include ../partials/header %>

    <header class="jumbotron bubble">
        <div class="container">
            <h1>Welcome to ShibaEats!</h1>
            <p>View our hand-picked dishes from all over the world!</p>
            <p><a class="btn btn-primary btn-lg" href="/dishes/new">Add a new Dish!</a></p>
            
            <p>
                <form action="/dishes" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Dish search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Dishes!</h3>
        </div>
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h2> <%= noMatch %></h2>
            <% } %>
        </div>
        
        <% dishes.forEach(function(dish) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail bubble">
                    <img src="<%= dish.image %>">
                    <div class="caption">
                        <h4><%= dish.name %></h4>
                    </div>
                    <p>
                        <a href="/dishes/<%= dish._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
        
    </div>

<% include ../partials/footer %>